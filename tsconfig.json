{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    // เพิ่มบรรทัดนี้เข้าไป เพื่อให้การใช้งาน fomidable ทำงานได้
    "typeRoots": ["./node_modules/@types", "./src/types"]  
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "public/image/facebooklogo.jsx"
  ],
  "exclude": ["node_modules"]
}
